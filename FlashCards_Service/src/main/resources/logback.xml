<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%thread] %-5level %logger{20} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="org.robbins.flashcards" level="info" />
    <logger name="org.hibernate" level="info" />
    <logger name="org.hibernate.tool.hbm2ddl" level="info" />
    <logger name="org.springframework" level="info" />
    <logger name="com.mchange.v2" level="info" />
    <logger name="org.springsource" level="info" />
    <logger name="org.springframework.data" level="info" />

    <!-- Struts OgnlUtil issues unimportant warnings -->
    <logger name="com.opensymphony.xwork2.util.OgnlUtil" level="error" />
    <logger name="com.opensymphony.xwork2.ognl.OgnlValueStack"
        level="error" />
    <logger name="com.opensymphony.xwork2" level="info" />
    <logger name="ofreemarker" level="info" />
    <logger name="org.apache.commons.digester" level="info" />
    <logger name="org.apache.tiles" level="info" />
    <logger name="org.apache.http" level="info" />
    <logger name="org.apache.commons.beanutils" level="info" />
    <logger name="org.apache.struts2.components" level="info" />

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
