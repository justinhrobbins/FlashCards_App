<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%thread] %-5level %logger{20} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="org.robbins.flashcards" level="debug" />
    <logger name="com.datastax.driver.core" level="info" />

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
